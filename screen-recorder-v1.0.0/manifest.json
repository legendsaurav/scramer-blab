{
  "manifest_version": 3,
  "name": "Screen Recorder Pro",
  "version": "1.0.0",
  "description": "Record screen, window, or tab with audio. Continues recording when you switch tabs or close popup. Production-grade stability.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "offscreen",
    "tabCapture",
    "desktopCapture",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "http://localhost:3001/*",
    "https://scramer-blab.vercel.app/*",
    "https://app.arduino.cc/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Recorder Pro"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "http://localhost:3001/*",
        "https://scramer-blab.vercel.app/*"
      ],
      "js": ["schmer-content.js"],
      "run_at": "document_start"
    }
  ],
  "minimum_chrome_version": "109"
}
